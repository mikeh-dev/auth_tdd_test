<h1>Edit Password</h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= pluralize(form.object.errors.count, "error") %> prohibited this user from being saved:
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
    </div>
      <%= form.submit "Update Password", class: "btn btn-primary"  %>
  </form>
<% end %>
